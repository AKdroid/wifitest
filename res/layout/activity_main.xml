<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_medium"
        android:text="@string/hello_world"
        tools:context=".MainActivity" 
        android:id="@+id/SpokenText"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        />
    
    <Button
        android:text="Speak"
        android:id="@+id/speakbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SpokenText"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:text="Switch Window"
        android:id="@+id/switchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speakbutton"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:text="Next Field"
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchbutton"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:text="Paste"
        android:id="@+id/pastebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextbutton"
        android:layout_centerHorizontal="true"
        />
	<TextView 
	    android:text="Connection Status"
        android:id="@+id/statustext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pastebutton"
        android:layout_centerHorizontal="true"
	    />
</RelativeLayout>
